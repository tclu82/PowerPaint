package shape;

import java.awt.Color;
import java.awt.Shape;

/**
 * The GUIPanel class.
 *
 * @author Tzu-Chien Lu tclu82@uw.edu
 * @version Nov 20 2015
 */
public class GUIShape {
    
    /** The current shape is used for painting. */
    private final Shape myShape;
    
    /** The current thickness is used for painting. */
    private final int myThickness;
    
    /** The current color is used for painting. */
    private final Color myColor;
    
    /**
     * Constructor setup passed value to private fields.
     * 
     * @param theShape a shape is selected.
     * @param theThickness a thickness is selected.
     * @param theColor a color is selected.
     */
    public GUIShape(final Shape theShape, final int theThickness, final Color theColor) {
        myShape = theShape;
        myThickness = theThickness;
        myColor = theColor;
    }
    
    /**
     * A getter return myShape.
     * 
     * @return myShape.
     */
    public Shape getShape() {
        return myShape;
    }
    
    /**
     * A getter return myThickness.
     * 
     * @return myThickness.
     */
    public int getThickness() {
        return myThickness;
        
    }
    
    /**
     * A getter return myColor.
     * 
     * @return myColor.
     */
    public Color getColor() {
        return myColor;
    }
}
